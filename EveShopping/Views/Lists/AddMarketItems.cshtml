@model EveShopping.Models.EDVAddMarketItems

@{
    ViewBag.Title = "Add market items to shopping list";
    ViewBag.FullTitle = "EVE-shopping list market: " + Model.ShoppingListName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>AddMarketItems</h2>*@


@section scripts{
    @Scripts.Render("~/bundles/jqueryui")   
        <script src="~/Scripts/jquery.blockUI.js"></script>

    <script src="~/Scripts/eshAddMarketItems.js" type="text/javascript">
    </script>
}

<div id="list-main">
    <div class="inside-section">
        <h3>Market items in shopping list</h3>
        <div id="fitsInList" class="subs-wrapper" data-esh-fits-in-list>
            @Html.Partial("PVMarketItemsEnShoppingList", Model.MarketItemsEnShoppingList)
        </div>
    </div>
            <div id="links-navegacion-pasos-container">
            @Html.ActionLink("<< Add ship fittings", "ImportFits", new { id = this.ViewBag.PublicID }, new { @class="buttonYellow" })
            @Html.ActionLink("Summary >>", "Summary", new { id = this.ViewBag.PublicID }, new { @class="buttonYellow" })
        </div>

</div>


@section izquierda{
    <div id="list-left-menu">
        <div id="market-items-accordion" class="inside-section">
            <h3>Search</h3>
                <div>
                    <input type="input" id="searchText" name="seachText" placeholder="Type to seach, min 5 chars" />
                    <div id="searchResult">
                    </div>
                </div>

            <h3>Market items</h3>
            <div id="marketItems" class="subs-wrapper">
                @Html.Partial("PVMarketMenu", this.Model)
            </div>
        </div>
    </div>
}

@section subheader{
        <div id="subheader-container" class="clearfix">
            <ul id="menu-pasos">
                <li>@Html.ActionLink("Add ship fittings", "ImportFits", "Lists", new { id = this.ViewBag.PublicID}, null)</li>
                <li class="selected">@Html.ActionLink("Add market items", "AddMarketItems", "Lists", new { id = this.ViewBag.PublicID}, null)</li>
                <li>@Html.ActionLink("Summary", "Summary", "Lists", new { id = this.ViewBag.PublicID},null)</li>
            </ul>
        </div>

}