@model EveShopping.Modelo.EV.MarketItem

@if (ViewBag.allowEdit == null) { ViewBag.allowEdit = true; }

<tr class="fila-impar" data-esh-id="@Model.ItemID" data-esh-units="@Model.Units" data-esh-vol="@Model.Volume" data-esh-price="@Model.TotalPrice">
    <td>
        <img src="@Model.ImageUrl32" alt="@Model.Name" /></td>
    <td>@Model.Name</td>
    <td>x @Model.Units</td>
    <td class="numericCol">@EveShopping.Web.VSHMappings.GetNormalizedPrice(Model.TotalPrice)</td>
    <td class="numericCol">@Model.Volume m3</td>
    <td class="numericCol">
        @if (ViewBag.allowEdit)
        {
            <img class="edit" src="~/Content/images/empty24.png" data-esh-edit-link onclick="editItemInShoppingList(@Model.ItemID)" />
            <img class="delete" data-esh-del-fit-link src="~/Content/images/empty24.png" onclick="deleteItemInShoppingList(@Model.ItemID)" />
        }
    </td>
</tr>
